# Live Streaming Platform Environment Configuration
# Copy this file to .env and fill in real values for production

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration (override token.json values)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=2h

# Stream Configuration
STREAM_DEFAULT_EXPIRY_MINUTES=120
STREAM_MAX_CONCURRENT_VIEWERS=1000

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis (optional, for distributed deployments)
REDIS_URL=redis://localhost:6379

# CloudFront/CDN Configuration (if using AWS)
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
CLOUDFRONT_PRIVATE_KEY_PATH=/path/to/private-key.pem
